	"version": "0.2.0",
	"configurations": [
		{
			"name": "Launch Package",
			"type": "go",
			"request": "launch",
			"mode": "auto",
			"buildFlags": "-ldflags='-X shop.loadout.tf/src/server/server.ReleaseMode=false'",
			"program": "${workspaceFolder}/src/server",
			"cwd": "${workspaceFolder}"
		},
		{
			"name": "Launch test",
			"type": "go",
			"request": "launch",
			"mode": "test",
			"buildFlags": "-tags 'cse'",
			"program": "${workspaceFolder}/src/server",
			"cwd": "${workspaceFolder}",
			"args": [
				"-test.run",
				"CreateVault"
			]
		}
	]
}
